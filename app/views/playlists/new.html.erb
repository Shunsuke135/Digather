<div class="playlist-body">
<div class="container">
  <div class="row">
    <div class="mx-auto">
      <% if @playlist.errors.any? %>
        <h3><%= @playlist.errors.count %>prohibited this obj from being saved:</h3>
          <ul>
            <% @playlist.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>

      <h1 class="user-info-edit">New playlist</h1>

      <%= form_with model: @playlist, local:true do |f| %>
        <p class="user-edit-field">Playlist Name</p>
        <p class="user-edit-field"><%= f.text_field :name %></p>
        <p class="user-edit-field">Information</p>
        <p class="user-edit-field"><%= f.text_area :information %></p><br>
        <p class="user-edit-field">Genre</p>
        <p class="user-edit-field"><%= f.collection_radio_buttons :genre_id, Genre.all, :id, :name %></p><br>



        <p class="user-edit-btn"><%= f.submit "Create Playlist", class:"btn btn-success btn-lg" %></p><br>
      <% end %>

    </div>
  </div>
  <%= render "layouts/fotter" %>
</div>
</div>