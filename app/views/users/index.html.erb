<div class="container">
 <div class="row">
  <div class="col-md-3">
   <h1>Candy info</h1>
   <%= render 'users/profile', user: current_user %>
   <h2><%= link_to "New playlist", new_playlist_path %></h2>
  </div>

  <div class="col-md-8 offset-md-1">
   <h1>Users</h1>
    <table class="table">
      <thead>
       <th></th>
       <th>image</th>
       <th>name</th>
      </thead>
      <tbody>
    <% @users.each do |user| %>
     <tr>
       <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format:'jpeg', fallback: "no_image.jpg" %></td>
       <td><%= user.name %>
       <td><p>following : <%= link_to user.followings.count, user_followings_path(user) %></p></td>
       <td><p>followers : <%= link_to user.followers.count, user_followers_path(user) %></p></td>
       <td><%= render 'relationships/follow', user: user %></td>
       <td><%= link_to "Show", user_path(user.id) %></td>
     </tr>
    <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>
